//array for puting all the functions together
var array = [x, y, add(), subtraction(), multiplcation(), divide()];
//console.log(array)
//function town where all the functions are. function town is here
function add(){
z = x + y
return (z)
}
function subtraction(){
z = x - y
return (z)
}
function multiplcation() {
  z = x * y
  return (z)
}
function divide() {
  z = x / y
  return (z)
}

